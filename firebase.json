{
  "hosting": {
    "public": "dist",
    "predeploy": ["npm run build"],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],

    "redirects": [
      {
        "source": "/x",
        "destination": "/?utm_source=qr&utm_medium=offline&utm_campaign=business_card",
        "type": 302
      }
    ],

    "rewrites": [{ "source": "**", "destination": "/index.html" }],

    "headers": [
      {
        "source": "/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      },
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
