rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }
    function isAdmin() {
      return isAuthed() &&
             request.auth.token.email in [
               "romanova.lenovo@gmail.com",
               "lena.vajnberg7@inbox.ru"
             ];
    }

    match /products/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /orders/{id} {
      allow read, update, delete: if false;
      allow create: if
        request.resource.data.keys().hasOnly([
          'contact', 'items', 'total', 'status', 'createdAt'
        ]) &&
        request.resource.data.contact is map &&
        request.resource.data.contact.name is string &&
        request.resource.data.contact.phone is string &&
        (!('email' in request.resource.data.contact) ||
          request.resource.data.contact.email is string) &&
        request.resource.data.items is list &&
        request.resource.data.items.size() > 0 &&
        request.resource.data.total is number &&
        request.resource.data.status == 'new' &&
        request.resource.data.createdAt is timestamp;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}